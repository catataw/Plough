{{outlet}}
<div class="row">
    <div>
        <p class="page-header pmo-header title-p">添加新项目</p>
    </div>
</div>
<div class="modal-body form-modal"
     style="height:auto;overflow-y: hidden;padding-bottom:50px;border-bottom: 1px solid #eee;">
    <div class="col-lg-12 col-md-12">
        <form role="form" id="addComputerFormId">
            <!--第一个页面 开始-->
            {{#if firstPage}}
                <div class="edit-area">
                    <div class="form-group col-lg-6 col-md-6">
                        <label>
                            <span style="font-size:20px;color:#107CD6;border-left: solid 4px #107CD6;padding-left:12px;">项目基本信息</span>
                        </label>
                    </div>
                    <div class="form-group col-lg-6 col-md-6" style="visibility:hidden;">
                        <label></label>
                        {{input value=addProject.projectId class="form-control"}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>
                            <span class="danger-word-v">*</span>项目编号/商机编号：
                        </label>
                        {{input value=addProject.projectId class="form-control"}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>合同编号：</label>
                        {{input value=addProject.contractNo class="form-control"}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>
                            <span class="danger-word-v">*</span>合同签订时间：
                        </label>
                        {{date-picker date=addProject.signContractTime valueFormat='YYYY-MM-DD' class="form-control"}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>
                            <a href="#" style="color:#ccc;"><span class="glyphicon glyphicon-question-sign"></span></a>
                            采购方式：</label>
                        {{#x-select value=addProject.purchaseType action="purchaseTypeChanged"  as |xs|}}
                            {{#xs.option value=''}}未知{{/xs.option}}
                            {{#xs.option value='公开招标'}}公开招标{{/xs.option}}
                            {{#xs.option value='单一来源'}}单一来源{{/xs.option}}
                            {{#xs.option value='比选'}}比选{{/xs.option}}
                            {{#xs.option value='框架协议'}}框架协议{{/xs.option}}
                        {{/x-select}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label><span class="danger-word-v">*</span>工期要求：</label>
                        {{date-picker date=addProject.onlineTime valueFormat='YYYY-MM-DD' class="form-control"}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>项目名称：</label>
                        {{input value=addProject.projectName class="form-control"}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>通称(别名)：</label>
                        {{input value=addProject.projectAlias class="form-control"}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>
                            <a href="#" style="color:#ccc;"><span class="glyphicon glyphicon-question-sign"></span></a>
                            项目类型：</label>
                        {{#x-select value=addProject.projectType action="projectTypeChanged"  as |xs|}}
                            {{#xs.option value=''}}未知{{/xs.option}}
                            {{#xs.option value='集团产品研发类'}}集团产品研发类{{/xs.option}}
                            {{#xs.option value='集团委托应用研类'}}集团委托应用研类{{/xs.option}}
                            {{#xs.option value='市场类（内部）'}}市场类（内部）{{/xs.option}}
                            {{#xs.option value='市场类（外部）'}}市场类（外部）{{/xs.option}}
                        {{/x-select}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>项目启动会时间：</label>
                        {{date-picker date=addProject.startTime valueFormat='YYYY-MM-DD' class="form-control"}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>
                            <a href="#" style="color:#ccc;"><span class="glyphicon glyphicon-question-sign"></span></a>
                            项目级别：</label>
                        {{#x-select value=addProject.projectLevel action="projectLevelChanged"  as |xs|}}
                            {{#xs.option value=''}}未知{{/xs.option}}
                            {{#xs.option value='重大'}}重大{{/xs.option}}
                            {{#xs.option value='重点'}}重点{{/xs.option}}
                            {{#xs.option value='一般'}}一般{{/xs.option}}
                        {{/x-select}}
                    </div>

                    <div class="form-group col-lg-6 col-md-6">
                        <label>项目分类：</label>
                        {{#x-select value=addProject.projectClassify action="projectClassifyChanged"  as |xs|}}
                            {{#xs.option value=''}}未知{{/xs.option}}
                            {{#xs.option value='平台类'}}平台类{{/xs.option}}
                            {{#xs.option value='应用类'}}应用类{{/xs.option}}
                            {{#xs.option value='运营类'}}运营类{{/xs.option}}
                            {{#xs.option value='咨询类'}}咨询类{{/xs.option}}
                            {{#xs.option value='分析类'}}分析类{{/xs.option}}
                        {{/x-select}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>总节点数：</label>
                        {{input value=addProject.nodeCount class="form-control"}}
                    </div>
                    {{#if session.isAdmin}}
                        <div class="form-group col-lg-6 col-md-6">
                            <label>项目金额(元)：</label>
                            {{input value=addProject.projectPrice class="form-control"}}
                        </div>
                    {{/if}}
                    {{#if session.isSuper}}
                        <div class="form-group col-lg-6 col-md-6">
                            <label>项目金额(元)：</label>
                            {{input value=addProject.projectPrice class="form-control"}}
                        </div>
                    {{/if}}
                    <div class="clear"></div>
                </div>
            {{/if}}
            <!--第一个页面 结束-->
            <!--第二个页面 开始-->
            {{#if secondPage}}
                <div class="edit-area">
                    <div class="form-group col-lg-6 col-md-6">
                        <label>
                            <span style="font-size:20px;color:#107CD6;border-left: solid 4px #107CD6;padding-left:12px;">客户侧信息</span>
                        </label>
                    </div>
                    <div class="form-group col-lg-6 col-md-6" style="visibility:hidden;">
                        <label></label>
                        {{input value=addProject.projectId class="form-control"}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>客户名称：</label>
                        {{input value=addProject.customerName class="form-control"}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>客户部门名称：</label>
                        {{input value=addProject.customerDepartmentName class="form-control"}}
                    </div>

                    <div class="form-group col-lg-6 col-md-6">
                        <label>二级经理：</label>
                        {{input value=addProject.lever2Manager class="form-control"}}
                    </div>

                    <div class="form-group col-lg-6 col-md-6">
                        <label>三级经理：</label>
                        {{input value=addProject.lever3Manager class="form-control"}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>员工(客户)：</label>
                        {{input value=addProject.customerStaffName class="form-control"}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>主要联系人：</label>
                        {{input value=addProject.customerPrimaryContact class="form-control"}}
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="edit-area">
                    <div class="form-group col-lg-6 col-md-6">
                        <label>
                            <span style="font-size:20px;color:#107CD6;border-left: solid 4px #107CD6;padding-left:12px;">苏研侧信息</span>
                        </label>
                    </div>
                    <div class="form-group col-lg-6 col-md-6" style="visibility:hidden;">
                        <label></label>
                        {{input value=addProject.projectId class="form-control"}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>涉及小组：</label>
                        {{input value=addProject.teams class="form-control"}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>涉及区域：</label>
                        {{input value=addProject.involvedRegion class="form-control"}}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>销售经理：</label>
                        {{input value=addProject.saleManager class="form-control" }}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>区域大项目经理：</label>
                        {{input value=addProject.areaProjectManager class="form-control" }}
                    </div>

                    <div class="form-group col-lg-6 col-md-6">
                        <label>区域解决方案经理：</label>
                        {{input value=addProject.regionalSolManager class="form-control" }}
                    </div>

                    <div class="form-group col-lg-6 col-md-6">
                        <label>产品部项目经理：</label>
                        {{input value=addProject.projectManagerId  class="form-control" }}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>实施经理：</label>
                        {{input value=addProject.implementManager class="form-control" }}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>研发经理：</label>
                        {{input value=addProject.developManager class="form-control" }}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>测试经理：</label>
                        {{input value=addProject.testManager class="form-control" }}
                    </div>
                    <div class="form-group col-lg-6 col-md-6">
                        <label>服务经理：</label>
                        {{input value=addProject.serviceManager class="form-control" }}
                    </div>
                    <div class="clear"></div>
                </div>
            {{/if}}
            <!--第二个页面 结束-->
        </form>
    </div>
</div>
<div class="pmo-footer" style="text-align:center;padding:10px;">
    {{#if firstPage}}
        <button type="button" class="btn btn-primary"  {{action 'pageNext'}}>
            <span>下一步</span>
        </button>
    {{/if}}

    {{#if secondPage}}
        <button type="button" class="btn btn-default"  {{action 'pagePre'}}>
            <span>上一步</span>
        </button>
        <button type="button" class="btn btn-primary"  {{action 'doAddProject'}}>
            <span>完成</span>
        </button>
    {{/if}}
</div>